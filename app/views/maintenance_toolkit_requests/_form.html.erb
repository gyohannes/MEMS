
<%= simple_form_for(@maintenance_toolkit_request) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-6 left_form">
        <%= f.association :organization_structure %>
        <%= f.association :facility %>
        <%= f.input :toolkit_name %>
        <%= f.input :toolkit_description %>
        <%= f.input :quantity %>
      </div>
      <div class="col-sm-6">
        <%= f.input :requested_to %>
        <%= f.input :requested_by %>
        <%= f.input :contact_address %>
        <%= f.input :request_date, as: :string, input_html: {class: 'datepicker'} %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
