<% content_for :header do %>
    <div class="block-header">
      <h2>DASHBOARD</h2>
    </div>
   <div class="row">

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="card">
        <div class="header">
          Equipments By Status
        </div>
        <div class="body">
          <%= pie_chart equipment_by_status_equipment_index_path, download: true %>
        </div>
      </div>

      <div class="card">
      <div class="body">
        <div id="calendar"></div>
      </div>
    </div>

     </div>


    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="card">
        <div class="header">
          Equipment by Category
        </div>
        <div class="body">
          <%= column_chart equipment_by_category_equipment_index_path %>
        </div>
      </div>

      <div class="card">
        <div class="header">
          Latest News
        </div>
        <div class="body">
          <%= render '/news/latest' %>
        </div>
      </div>

    </div>
    </div>
     </div>
<% end %>