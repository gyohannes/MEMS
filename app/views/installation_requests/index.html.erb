<div class="header">
  <h2>
    Installation Requests
  </h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Organization structure</th>
      <th>Facility</th>
      <th>Equipment name</th>
      <th>Model</th>
      <th>Installation description</th>
      <th>Requested to</th>
      <th>Request to org structure</th>
      <th>Request to facility</th>
      <th>Request to institution</th>
      <th>Requested by</th>
      <th>Request date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @installation_requests.each do |installation_request| %>
      <tr>
        <td><%= installation_request.organization_structure %></td>
        <td><%= installation_request.facility %></td>
        <td><%= installation_request.equipment_name %></td>
        <td><%= installation_request.model %></td>
        <td><%= installation_request.installation_description %></td>
        <td><%= installation_request.requested_to %></td>
        <td><%= installation_request.request_to_org_structure %></td>
        <td><%= installation_request.request_to_facility %></td>
        <td><%= installation_request.request_to_institution %></td>
        <td><%= installation_request.requested_by %></td>
        <td><%= installation_request.request_date %></td>
        <td>
          <%= link_to 'Details', installation_request %> |
          <%= link_to 'Edit', edit_installation_request_path(installation_request) %> |
          <%= link_to 'Delete', installation_request, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>

<%= link_to 'New Installation Request', new_installation_request_path %>
</div>