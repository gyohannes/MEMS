<table class="table table-striped table-bordered dataTable js-exportable" width="100%">
  <thead>
  <tr>
    <th>Status</th>
    <th>Number of Equipment</th>
  </tr>
  </thead>
  <tbody>
  <% total = 0 %>
  <% Status.all.each do |status| %>
      <tr>
        <th><%= status %></th>
        <th><%= st = Equipment.total_by_status(current_user, status) %></th>
      </tr>
  <% total += st %>
  <% end %>
  </tbody>
  <tr>
    <th><center>Total Number of Equipment</center></th>
    <th><center><%= total %></center></th>
  </tr>
</table>