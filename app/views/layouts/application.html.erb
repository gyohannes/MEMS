<!DOCTYPE html>
<html>

<head>
  <%= csrf_meta_tags %>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <title></title>
  <!-- Favicon-->
  <link rel="icon" href="favicon.ico" type="image/x-icon">

  <!-- Google Fonts -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag "application-print", :media => "print" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="theme-cyan">
<!-- Page Loader -->
<div class="page-loader-wrapper">
  <div class="loader">
    <div class="preloader">
      <div class="spinner-layer pl-red">
        <div class="circle-clipper left">
          <div class="circle"></div>
        </div>
        <div class="circle-clipper right">
          <div class="circle"></div>
        </div>
      </div>
    </div>
    <p>Please wait...</p>
  </div>
</div>
<!-- #END# Page Loader -->
<!-- Top Bar -->
<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
      <a href="javascript:void(0);" class="bars"></a>
      <%= link_to root_path do %>
          <span class="navbar-brand">Medical Equipment Management System (MEMS)</span>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button">
            <span style="vertical-align: super"><%= current_user.email rescue nil %></span> <i class="material-icons">account_circle</i>
            <h5><%= current_user.role %></h5>
          </a>
          <ul class="dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                  <i class="material-icons">lock</i>
                  <span>Change Password</span>
              <% end %>
            </li>
            <li role="seperator" class="divider"></li>
            <li>
              <%= link_to destroy_user_session_path do %>
                  <i class="material-icons">input</i>
                  <span>Sign Out</span>
              <% end %>
            </li>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<!-- #Top Bar -->
<section>
  <!-- Left Sidebar -->
  <aside id="leftsidebar" class="sidebar">

    <!-- Menu -->
    <div class="menu">
      <ul class="list">
        <li class="header">MAIN NAVIGATION</li>
        <li>
          <%= link_to news_index_path do %>
              <i class="material-icons">info_outline</i>
              <span>News</span>
          <% end %>
        </li>
        <%= render partial: 'menus/admin' %>
        <%= render partial: 'menus/biomedical_engineer' %>
        <%= render partial: 'menus/biomedical_head' %>
        <%= render partial: 'menus/department' %>
        <%= render partial: 'menus/institution' %>
      </ul>
    </div>
    <!-- #Menu -->
    <!-- Footer -->

    <!-- #Footer -->
  </aside>
  <!-- #END# Left Sidebar -->
</section>

<section class="content">
  <div class="container-fluid">
    <div class="row clearfix">
        <%= render partial: 'shared/flash_messages' %>
        <%= yield :header %>
        <div class="card">
          <%= yield %>
        </div>
    </div>
  </div>
</section>
</body>
</html>