<table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
  <tr>
    <th>Name</th>
    <th>Equipment</th>
    <th>Model</th>
    <th>Training type</th>
    <th>Level</th>
    <th>Training date</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @trainings.each do |training| %>
      <tr>
        <td><%= training.contact %></td>
        <td><%= training.equipment_name %></td>
        <td><%= training.model %></td>
        <td><%= training.training_type %></td>
        <td><%= training.level %></td>
        <td><%= training.training_date.strftime("%B %d, %Y") rescue nil %></td>
        <td>
          <%= link_to 'Details', training, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_training_path(training), class: 'btn btn-primary' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
