<div class="header">
  <h2>
    Equipment Categories
  </h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @equipment_categories.each do |equipment_category| %>
      <tr>
        <td><%= equipment_category.name %></td>
        <td>
          <%= link_to edit_equipment_category_path(equipment_category) do %>
              <i class="material-icons">edit</i>
          <% end %>
          <%= link_to equipment_category, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>
<%= link_to 'New Equipment Category', new_equipment_category_path %>
</div>