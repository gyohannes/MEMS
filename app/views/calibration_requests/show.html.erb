<div class="header">
  <h2>Calibration Request</h2>
</div>
<div class="body">
<p>
  <strong>Request from:</strong>
  <%= @calibration_request.request_from %>
</p>

<p>
  <strong>Equipment:</strong>
  <%= @calibration_request.equipment %>
</p>

<p>
  <strong>Calibration description:</strong>
  <%= @calibration_request.calibration_description %>
</p>

<p>
  <strong>Request to:</strong>
  <%= @calibration_request.request_to %>
</p>

  <% if @calibration_request.institution_id? %>
      <p>
        <label><%= @calibration_request.request_to %>:</label>
        <%= @calibration_request.institution %>
      </p>
  <% end %>


  <p>
  <strong>Requested by:</strong>
  <%= @calibration_request.user.name_and_from_type %>
</p>

<p>
  <strong>Request date:</strong>
  <%= @calibration_request.request_date %>
</p>

  <p>
  <strong>Status:</strong>
  <%= @status %>
  </p>
  <%= simple_form_for(@calibration_request, url: decision_calibration_request_path) do |f| %>
  <% if can? :decision, @calibration_request and [Constants::PENDING, Constants::FORWARDED].include?(@status) %>
          <%= f.input :comment %>
          <%= f.input :status, label: 'Action', collection: Constants::ACTIONS, as: :radio_buttons, wrapper_html: {class: 'single_columned_list'} %>
          <div id="forward">
            <%= f.input :request_to, label: 'Forward to', collection: Constants::REQUEST_TO %>
          </div>
          <div id="calibration_request_to">
            <%= render partial: 'request_to' %>
          </div>
      <%= f.association :decided_user, as: :hidden, input_html: {value: current_user.id} %>
  <% else %>
      <p><label>Comment:</label> <%= @calibration_request.comment %></p>
      <p><label><%= @status unless @status==Constants::PENDING %> by:</label> <%= @calibration_request.decided_user.try(:name_and_from_type) %></p>
  <% end %>
<hr/>
      <% if can? :decision, @calibration_request and [Constants::PENDING, Constants::FORWARDED].include?(@status) %>
        <%= f.button :submit,'Submit' %>
    <% end %>
<% end %>
<br/>
<%= link_to 'Edit', edit_calibration_request_path(@calibration_request), class: 'btn btn-primary' if can? :edit, @calibration_request and @calibration_request.status == Constants::PENDING  %>
<%= link_to 'Back', calibration_requests_path %>
</div>