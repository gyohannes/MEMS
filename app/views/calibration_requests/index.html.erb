<div class="header">
  <h2>
    Calibration Requests
  </h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Request by</th>
      <th>Request date</th>
      <th>Equipment</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @calibration_requests.each do |calibration_request| %>
      <tr>
        <td><%= calibration_request.user.organization_unit %></td>
        <td><%= calibration_request.request_date.strftime("%B %d, %Y") rescue nil %></td>
        <td><%= calibration_request.equipment %></td>
        <td><%= calibration_request.description %></td>
        <td><%= calibration_request.status %></td>
        <td>
          <%= link_to 'Details', calibration_request, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_calibration_request_path(calibration_request), class: 'btn btn-primary' if can? :edit, calibration_request and calibration_request.status == Constants::PENDING %>
          <%= link_to 'Delete', calibration_request, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if can? :destroy, calibration_request %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calibration Request', new_calibration_request_path, class: 'btn btn-primary' if can? :create, CalibrationRequest %>
</div>