
<%= simple_form_for(@calibration_request) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :equipment, collection: @equipments %>
    <%= f.input :description %>
    <%= f.association :user, label: 'Requested by', collection: [current_user], prompt: false %>
    <%= f.input :request_date, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :attachment, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
