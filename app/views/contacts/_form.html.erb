
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.association :organization_unit, collection: [current_user.organization_unit], prompt: false %>
      <%= f.input :name %>
      <%= f.input :profession %>
      <%= f.input :title, label: 'Job Title' %>
    </div>
    <div class="col-sm-6" style="border-left: 1px solid skyblue;">
      <%= f.input :work_place %>
      <%= f.input :city %>
      <%= f.input :phone_number %>
      <%= f.input :nationality, as: :country, priority: ["Ethiopia"] %>
      <%= f.input :email %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
