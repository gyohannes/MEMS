
<%= simple_form_for(@training_request) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-6 left_form">
        <%= f.association :organization_unit, collection: [current_user.organization_unit], prompt: false %>
        <%= f.association :facility, collection: [current_user.facility], prompt: false %>
        <%= f.input :request_to, collection: Constants::REQUEST_TO %>
        <div id="training_request_to">
          <%= render partial: 'request_to' %>
        </div>
          <%= f.association :user, label: 'Requested by', collection: [current_user], prompt: false %>
          <%= f.input :request_date, as: :string, input_html: {class: 'datepicker'} %>
      </div>
      <div class="col-sm-6">
        <%= f.input :trainee_type, label: 'Training Type', as: :radio_buttons, collection: ['End User Training', 'Maintenance Training'] %>
        <%= f.input :training_description %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
