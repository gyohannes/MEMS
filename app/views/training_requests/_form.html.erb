
<%= simple_form_for(@training_request) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
      <%= f.association :equipment_name %>
      <%= f.input :request_date, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :trainee_type, as: :radio_buttons, collection: Constants::TRAINING_TYPES, wrapper_html:{class: "single_columned_list"} %>
    <%= f.input :level, as: :radio_buttons, collection: Constants::TRAINING_LEVELS, wrapper_html:{class: "single_columned_list"} %>
      <%= f.input :training_description %>
    <%= f.input :attachment, as: :file %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
