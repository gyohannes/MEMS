<%= simple_form_for(@organization_structure) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.input :organization_structure_type, collection: Constants::ORGANIZATION_TYPES, label: 'Organization Unit Type' %>
    <%= f.association :parent_organization_structure, label: 'Parent Organization Unit' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
