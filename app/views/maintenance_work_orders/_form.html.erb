
<%= simple_form_for(@maintenance_work_order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :equipment, collection: @equipment %>
    <%= f.association :user, collection: @engineers, label: 'Task Allocated to' %>
    <%= f.input :location %>
    <%= f.input :date, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :description_of_problem %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
