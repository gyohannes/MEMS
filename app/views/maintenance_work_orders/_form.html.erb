
<%= simple_form_for(@maintenance_work_order) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :work_order_number %>
    <%= f.association :maintenance_request, as: :hidden %>
    <%= f.association :equipment, collection: @equipment %>
    <%= f.association :user, collection: @engineers, label: 'Assigned to' %>
    <%= f.input :priority, collection: ['High', 'Medium', 'Low'] %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
