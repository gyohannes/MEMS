<div class="header">
<h2>
  Spare Part Requests
</h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Request from</th>
      <th>Request date</th>
      <th>Spare part name</th>
      <th>Model</th>
      <th>Quantity</th>
      <th>Request to</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @spare_part_requests.each do |spare_part_request| %>
      <tr>
        <td><%= spare_part_request.request_from %></td>
        <td><%= spare_part_request.request_date %></td>
        <td><%= spare_part_request.spare_part_name %></td>
        <td><%= spare_part_request.model %></td>
        <td><%= spare_part_request.quantity %></td>
        <td><%= spare_part_request.request_to %></td>
        <td><%= spare_part_request.status %></td>
        <td>
          <%= link_to 'Details', spare_part_request, class: 'btn btn-primary' %>
          <%= link_to 'Edit', edit_spare_part_request_path(spare_part_request), class: 'btn btn-primary' if can? :edit, spare_part_request %>
        <%= link_to 'Delete', spare_part_request, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if can? :destroy, spare_part_request %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
  <hr/>
<%= link_to 'New Spare Part Request', new_spare_part_request_path, class: 'btn btn-primary' if can? :create, SparePartRequest %>
</div>