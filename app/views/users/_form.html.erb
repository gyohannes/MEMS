<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-6">
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :father_name %>
    <%= f.input :grand_father_name %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>
    <div class="col-sm-6" style="border-left: 1px solid skyblue;">
      <%= f.association :organization_unit, label: 'Organization Unit', collection: [@user.organization_unit || current_user.organization_unit] if current_user.organization_unit %>
      <%= f.input :role, collection: Constants::ROLES %>
      <div id="department">
        <%= render partial: 'department' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= javascript_include_tag 'jquery' %>
<%= javascript_include_tag 'users' %>