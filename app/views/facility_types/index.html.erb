<div class="header">
  <h2>
    Facility Types
  </h2>
</div>
  <div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @facility_types.each do |facility_type| %>
      <tr>
        <td><%= facility_type.name %></td>
        <td><%= facility_type.description %></td>
        <td>
          <%= link_to 'Edit', edit_facility_type_path(facility_type), class: 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facility Type', new_facility_type_path, class: 'btn btn-primary' %>
  </div>