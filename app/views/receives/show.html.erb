<div class="card">
  <div class="body">
    <p>
      <strong>Store:</strong>
      <%= @receife.store %>
    </p>

    <p>
      <strong>Delivered by:</strong>
      <%= @receife.deliverer_name %>
    </p>

    <p>
      <strong>Received by:</strong>
      <%= @receife.recipient_name %>
    </p>

    <p>
      <strong>Receive date:</strong>
      <%= @receife.receive_date %>
    </p>

    <p>
      <strong>Note:</strong>
      <%= @receife.note %>
    </p>
    <caption>Received spare parts list</caption>
    <table id="spare_parts" class="table table-responsive">
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Expiry Date</th>
        <th>Remarks</th>
      </tr>
      <% @receife.receive_spare_parts.each do |sp| %>
          <tr>
            <td><%= sp.spare_part %></td>
            <td><%= sp.quantity %></td>
            <td><%= sp.unit_price %></td>
            <td><%= sp.expiry_date.strftime('%B %d, %Y') %></td>
            <td><%= sp.remarks %></td>
          </tr>
      <% end %>
    </table>
    <%= link_to 'Back', receives_path %>
    <%= link_to 'Edit', edit_receife_path(@receife), class: 'btn btn-primary' %>
    <%= link_to 'Download Model 19', receife_path(@receife,:format=>:pdf),:class=>'btn', class: 'btn btn-primary' %>
  </div>
</div>
