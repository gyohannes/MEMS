<%= simple_nested_form_for(@receive) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-6">
      <%= f.association :store, collection: @stores %>
      <%= f.input :reference_number %>
      <%= f.input :deliverer_name, label: 'Delivered By' %>
    </div>

    <div class="col-sm-6 left_form">
      <%= f.input :recipient_name, label: 'Received By' %>
      <%= f.input :receive_date, as: 'string', input_html: {class: 'datepicker'}, label: 'Delivery Date' %>
      <%= f.input :note %>
    </div>
  </div>

    <ul class="nav nav-tabs tab-nav-right" role="tablist">
      <li role="presentation" class="active"><a href="#equipment" data-toggle="tab">Equipment</a></li>
      <li role="presentation"><a href="#spare_parts" data-toggle="tab">Spare Parts/Accesseries</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane fade in active" id="equipment">
        <%= render partial: 'equipment_fields', locals: {f: f} %>
      </div>
      <div role="tabpanel" class="tab-pane fade in" id="spare_parts">
        <%= render partial: 'spare_part_fields', locals: {f: f} %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save Receiving Form' %>
  </div>
<% end %>
