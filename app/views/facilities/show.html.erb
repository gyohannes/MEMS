<div class="header">
  <h2>Facility Details</h2>
</div>
<div class="body">
<p>
  <strong>Organization structure:</strong>
  <%= @facility.organization_structure %>
</p>

<p>
  <strong>Name:</strong>
  <%= @facility.name %>
</p>

<p>
  <strong>Facility type:</strong>
  <%= @facility.facility_type %>
</p>

<p>
  <strong>Category:</strong>
  <%= @facility.category %>
</p>

<p>
  <strong>URL:</strong>
  <%= @facility.url %>
</p>

<p>
  <strong>Population:</strong>
  <%= @facility.population %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @facility.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @facility.longitude %>
