<%= simple_form_for(@facility) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-sm-6">
    <%= f.input :organization_unit_id, label: 'Organization Unit', collection: [@organization_unit] %>
      <%= f.input :name %>
      <%= f.input :code %>
    <%= f.association :facility_type %>
    <%= f.input :category, collection: ['Public', 'Private', 'NGO'] %>
    </div>
    <div class="col-sm-6" style="border-left: 1px solid skyblue;">
    <%= f.input :url, label: 'URL' %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :note %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
