
<%= simple_form_for(@maintenance) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :equipment %>
    <%= f.input :maintenance_type, collection: ['Corrective','Preventive'] %>
    <%= f.input :problem %>
    <%= f.input :action_taken %>
    <%= f.input :spare_parts_used %>
    <%= f.input :start_date, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :end_date, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :maintenance_cost %>
    <%= f.input :maintained_by %>
    <%= f.input :contact_address %>
    <%= f.input :preventive_maintenance_date, as: :string, input_html: {class: 'datepicker'} %>
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
