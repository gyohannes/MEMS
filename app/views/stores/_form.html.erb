<%= simple_form_for(@store) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :organization_structure, collection: [current_user.organization_structure], prompt: false %>
    <%= f.association :facility, collection: [current_user.facility], prompt: false %>
    <%= f.input :store_name %>
    <%= f.input :block_number %>
    <%= f.input :room_number %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
