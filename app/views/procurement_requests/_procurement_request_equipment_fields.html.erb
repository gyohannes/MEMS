<table id="procurement_request_equipments" class="table table-responsive" %>
  <tr>
    <th>Equipment Name</th>
    <th>Specification</th>
    <th>Quantity</th>
  </tr>
  <%= f.simple_fields_for :procurement_request_equipments, :wrapper => false do |equipment_form| %>
      <tr class="fields">
        <td><%= equipment_form.input :equipment_name_id, collection: EquipmentName.all, label: false %></td>
        <td><%= equipment_form.input :specification_id, collection: Specification.all, label: false %></td>
        <td><%= equipment_form.input :quantity, label: false %></td>
        <td style="vertical-align: top"><%= equipment_form.link_to_remove 'Remove' %></td>
      </tr>
      <%= javascript_include_tag 'global' %>
  <% end %>
</table>
<p><%= f.link_to_add "Add Equipment", :procurement_request_equipments, :data => { :target => "#procurement_request_equipments" }, class: 'btn btn-primary' %></p>
<br/>