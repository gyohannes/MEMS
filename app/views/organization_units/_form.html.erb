<%= simple_form_for(@organization_unit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :code %>
    <%= f.association :organization_unit_type %>
    <%= f.association :parent_organization_unit, label: 'Parent Organization Unit' %>
    <%= f.input :facility, label_html: {class: 'transparent_label'}, input_html: {class: 'filled-in chk-col-pink"'} %>
    <%= f.input :category, collection: ['Public', 'Private', 'NGO'] %>
    <%= f.input :url, label: 'URL' %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :note %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
