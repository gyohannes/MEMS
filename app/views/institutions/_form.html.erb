<%= simple_form_for(@institution) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :organization_structure_id, collection: [@organization_structure] %>
    <%= f.input :name %>
    <%= f.input :category, collection: ['Supplier', 'Local Representative'] %>
    <%= f.input :institution_type, label: 'Type', collection: ['NGO', 'Government','Private'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
