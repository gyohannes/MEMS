
<%= simple_form_for(@maintenance_request) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
      <%= f.association :user, label: 'Requested by', collection: [current_user], prompt: false %>
      <%= f.association :equipment, collection: @equipments %>
      <%= f.input :failure_date, as: :string, input_html: {class: 'datepicker'} %>
      <%= f.input :description_of_problem, label: 'Description of Problem' %>
      <%= f.association :equip_status %>
      <%= f.input :attachment, as: :file %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
