<div class="header">
  <h2>
    Organization Structure Types
  </h2>
</div>
<div class="body table-responsive">
  <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @organization_structure_types.each do |organization_structure_type| %>
      <tr>
        <td><%= organization_structure_type.name %></td>
        <td><%= organization_structure_type.description %></td>
        <td>
          <%= link_to 'Edit', edit_organization_structure_type_path(organization_structure_type) %> |
          <%= link_to 'Delete', organization_structure_type, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Organization Structure Type', new_organization_structure_type_path %>
</div>